# LinkedIn Job Application Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# LinkedIn credentials (required)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password

# CV file path (required)
CV_FILE_PATH=/app/data/cv.pdf

# MCP Server Configuration (required for distributed setup)
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_COMMAND=python -m linkedin_mcp.linkedin.linkedin_server

# Hugging Face Serverless API Configuration (required for AI inference)
HUGGING_FACE_HUB_TOKEN=your-hf-token-here

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/job_applier.log

# Optional: Results configuration
RESULTS_DIRECTORY=./results
SAVE_RESULTS=true

# Optional: Output format for CLI
OUTPUT_FORMAT=rich
